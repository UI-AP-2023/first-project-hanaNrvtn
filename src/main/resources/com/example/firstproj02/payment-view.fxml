<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firstproj02.PaymentController">
    <children>
        <Label fx:id="paymentPageLabel" alignment="CENTER" prefHeight="150.0" prefWidth="317.0" text="   Payment Page" textFill="PINK" underline="true">
            <font>
                <Font name="Gabriola" size="40.0" />
            </font>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </Label>
        <HBox prefHeight="200.0" prefWidth="600.0" style="-fx-background-color: #000000;">
            <children>
                <VBox prefHeight="200.0" prefWidth="300.0">
                    <children>
                        <Label fx:id="additionalCreditStatusLabel" alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="255.0" styleClass="validation-lbl" stylesheets="@styles.css" />
                        <HBox prefHeight="50.0" prefWidth="300.0">
                            <children>
                                <Label prefHeight="23.0" prefWidth="72.0" styleClass="edit-lbl" stylesheets="@styles.css" text="Additional :">
                                    <HBox.margin>
                                        <Insets left="30.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="additionalTextField" prefHeight="30.0" prefWidth="150.0" styleClass="user-tf" stylesheets="@styles.css" />
                            </children>
                        </HBox>
                        <Label fx:id="CVV2StatusLabe" prefHeight="18.0" prefWidth="143.0" styleClass="validation-lbl" stylesheets="@styles.css" />
                        <HBox prefHeight="50.0" prefWidth="300.0">
                            <children>
                                <Label styleClass="edit-lbl" stylesheets="@styles.css" text="CVV2 :">
                                    <HBox.margin>
                                        <Insets left="30.0" right="35.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="CVV2TxtField" prefHeight="30.0" prefWidth="150.0" styleClass="user-tf" stylesheets="@styles.css" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox prefHeight="500.0" prefWidth="300.0">
                    <children>
                        <Label fx:id="cardNumberStatusLabel" prefHeight="23.0" prefWidth="244.0" styleClass="validation-lbl" stylesheets="@styles.css" />
                        <HBox prefHeight="50.0" prefWidth="300.0">
                            <children>
                                <Label prefHeight="23.0" prefWidth="89.0" styleClass="edit-lbl" stylesheets="@styles.css" text="Card Number:">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="cardNumberTextField" prefHeight="30.0" prefWidth="150.0" styleClass="user-tf" stylesheets="@styles.css" />
                            </children>
                        </HBox>
                        <Label fx:id="passwordStatusLabel" prefHeight="18.0" prefWidth="150.0" styleClass="validation-lbl" stylesheets="@styles.css" />
                        <HBox prefHeight="50.0" prefWidth="300.0">
                            <children>
                                <Label styleClass="edit-lbl" stylesheets="@styles.css" text="Password :">
                                    <HBox.margin>
                                        <Insets left="10.0" right="10.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="cardPasswordTextField" prefHeight="30.0" prefWidth="157.0" styleClass="user-tf" stylesheets="@styles.css">
                                    <HBox.margin>
                                        <Insets left="5.0" />
                                    </HBox.margin>
                                </TextField>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </HBox>
        <Button fx:id="finishButton" mnemonicParsing="false" prefHeight="34.0" prefWidth="252.0" styleClass="login-signup-btn" stylesheets="@styles.css" text="Finish">
            <font>
                <Font name="Gabriola" size="17.0" />
            </font>
            <VBox.margin>
                <Insets left="35.0" top="30.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
