<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firstproj02.FinalizeCartController">
   <children>
      <VBox prefHeight="600.0" prefWidth="300.0">
         <children>
            <ComboBox fx:id="discountCodeComoBox" editable="true" prefHeight="26.0" prefWidth="235.0" promptText="Select Or Type Discount Code" styleClass="discount-combo-box" stylesheets="@styles.css">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" top="250.0" />
               </VBox.margin>
            </ComboBox>
            <Button fx:id="applyDiscountCode" mnemonicParsing="false" onAction="#applyDiscountCode" prefHeight="26.0" prefWidth="235.0" styleClass="login-signup-btn" stylesheets="@styles.css" text="Apply Discount Code">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Gabriola" size="15.0" />
               </font>
            </Button>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmButton" prefHeight="26.0" prefWidth="235.0" styleClass="login-signup-btn" stylesheets="@styles.css" text="Confirm ">
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Gabriola" size="15.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <VBox prefHeight="600.0" prefWidth="323.0">
         <children>
            <Label prefHeight="30.0" prefWidth="270.0" stylesheets="@styles.css" text="Invoice      " textFill="PINK" underline="true">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <font>
                  <Font name="Gabriola" size="40.0" />
               </font>
            </Label>
            <Label fx:id="invoiceLabel" prefHeight="437.0" prefWidth="270.0" styleClass="info-lab" stylesheets="@styles.css">
               <VBox.margin>
                  <Insets right="50.0" />
               </VBox.margin>
               <font>
                  <Font name="Gabriola" size="15.0" />
               </font>
            </Label>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
